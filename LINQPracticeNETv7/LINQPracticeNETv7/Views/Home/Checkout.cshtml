@model LINQPracticeNETv7.Models.Order

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Checkout" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="NumberOfAdultTickets" class="control-label"></label>
                <input asp-for="NumberOfAdultTickets" class="form-control" />
                <span asp-validation-for="NumberOfAdultTickets" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="NumberOfChildTickets" class="control-label"></label>
                <input asp-for="NumberOfChildTickets" class="form-control" />
                <span asp-validation-for="NumberOfChildTickets" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

